{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "noEmit": false,
    "noImplicitAny": true,
    "strict":true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
